{{yield}}
<div class="container">
  <div class="row">
    <h1>Add New Post</h1>
    <div class="well">
      <form>
        <div class="form-group">
          <label for="">Content</label>
          <div class="container">
            {{textarea value=content id="content" cols="80" rows="6"}}
          </div>
        </div>
        <div class="container">
          <button type="button" class="btn btn-primary" name="button" {{action 'saveNewPost'}}>Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>
